{
  "name": "trcy.cc",
  "version": "1.0.0",
  "description": "A self-hosted URL shortener with analytics, designed for personal use on shared hosting.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "test": "tests"
  },
  "scripts": {
    "build:css": "tailwindcss -i css/input.css -o css/compiled.css --minify",
    "watch:css": "tailwindcss -i css/input.css -o css/compiled.css --watch",
    "server:start": "php -S localhost:8000 server.php 2>&1",
    "reset:password": "touch reset.txt && echo 'Now you can visit /admin to reset the admin password.'",
    "reset:database": "rm database.sqlite3"
    "test:unit": "phpunit",
    "test:unit_details": "phpunit --display-all-issues",
    "test:syntax": "git ls-files '*.php' | xargs -n1 -P4 php -l"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "tailwindcss": "^4.1.18"
  }
}
